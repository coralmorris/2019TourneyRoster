@page
@model _2019TourneyRoster.Models.PlayerViewModel

@{
    ViewBag.Title = "Sign Up";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col headers">
            <p>SIGN-UP</p>
            <p>Get ready for the 2019 Table Tennis Tourney! The company will be providing the food, drinks, and equipment so just come prepared to have some fun!</p>
        </div>
    </div>
    <div class="row">
        <div class="col-4">
            @Html.BeginForm("Welcome", "Player", FormMethod.Post, new { @class = "pageForm" })
            {
            @Html.AntiForgeryToken()
              <div class="form-group">
                <input type="text" class="form-control" asp-for="Name" aria-describedby="Player Name" placeholder="Name" required>
              </div>
              <div class="form-group">
                <input type="email" class="form-control" asp-for="Email" placeholder="Email" required>
              </div>
              <div class="form-group">
                <select class="form-control" asp-for="ShirtSize">
                  <option selected>- Shirt Size -</option>
                  <option value="xs">XS</option>
                  <option value="s">S</option>
                  <option value="m">M</option>
                  <option value="l">L</option>
                  <option value="xl">XL</option>
                  <option value="xxl">XXL</option>
                </select>
              </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            }
        </div>
        <div class="col-4"></div>
        <div class="col-4">
            <img src="~/wwwroot/img/Paddle-Blue.png" class="img-fluid paddle-pic" alt="Blue Table Tennis Paddle" />
        </div>
    </div>
</div>
